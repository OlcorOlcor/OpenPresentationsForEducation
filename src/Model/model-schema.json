{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://OpenSlidesForEducation/model-schema.json",
    "title": "Presentation model",
    "description": "A model for presentation",
    "type": "object",
    "$defs": {
        "Text": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["text"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["type", "content"]
        },
        "HorizontalLine": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["horizontal_line"]
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    }
                }
                
            },
            "required": ["type"]
        },
        "Link": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["link"]
                }, 
                "content": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string"
                        }
                    },
                    "required": ["alias"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "Image": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["image"]
                }, 
                "content": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string"
                        }
                    },
                    "required": ["alias"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "ListItem": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["listItem"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"}
                        ]
                    }
                }
            },
            "required": ["type", "content"]
        },
        "List": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["list"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/List"},
                            {"$ref": "#/$defs/ListItem"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "listType": {
                            "type": "string",
                            "enum": ["ordered", "unordered"]
                        },
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    },
                    "required": ["listType", "globalMetadataTags", "metadata"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "TableData": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["tableData"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"}
                        ]
                    }
                }
            },
            "required": ["type", "content"]
        },
        "TableHeading": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["tableHeading"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"}
                        ]
                    }
                }
            },
            "required": ["type", "content"]
        },
        "TableRow": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["tableRow"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/TableData"}, 
                            {"$ref": "#/$defs/TableHeading"}
                        ]
                    }
                }
            },
            "required": ["type", "content"]
        },
        "Table": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["table"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/TableRow"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    },
                    "required": ["globalMetadataTags", "metadata"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "InnerWrapperElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["bold", "italic", "code"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"}
                        ]
                    }
                }
            }
        },
        "Section": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["section"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Paragraph"},
                            {"$ref": "#/$defs/Heading"},
                            {"$ref": "#/$defs/List"},
                            {"$ref": "#/$defs/BlockQuote"},
                            {"$ref": "#/$defs/HorizontalLine"},
                            {"$ref": "#/$defs/Table"},
                            {"$ref": "#/$defs/Section"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        },
                        "key": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "required": ["globalMetadataTags", "metadata", "value", "key"]
                }
            }
        },
        "Paragraph": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["paragraph"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"},
                            {"$ref": "#/$defs/Link"},
                            {"$ref": "#/$defs/Image"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    },
                    "required": ["globalMetadataTags", "metadata"]
                }
                
            },
            "required": ["type", "content", "attributes"]
        },
        "Heading": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["heading"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Text"},
                            {"$ref": "#/$defs/InnerWrapperElement"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "level": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 6
                        },
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    },
                    "required": ["level", "globalMetadataTags", "metadata"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "BlockQuote": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["blockquote"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Paragraph"},
                            {"$ref": "#/$defs/Heading"},
                            {"$ref": "#/$defs/List"},
                            {"$ref": "#/$defs/HorizontalLine"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        }
                    },
                    "required": ["globalMetadataTags", "metadata"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "Slide": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["slide"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Paragraph"},
                            {"$ref": "#/$defs/Heading"},
                            {"$ref": "#/$defs/List"},
                            {"$ref": "#/$defs/BlockQuote"},
                            {"$ref": "#/$defs/HorizontalLine"},
                            {"$ref": "#/$defs/Table"},
                            {"$ref": "#/$defs/Section"}
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "refs": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "globalMetadataTags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object"
                        } 
                    },
                    "required": ["refs", "globalMetadataTags", "metadata"]
                }
            },
            "required": ["type", "content", "attributes"]
        },
        "Lane": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["lane"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/$defs/Slide"},
                            { "type": "null" }
                        ]
                    }
                },
                "attributes": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "compile": {
                            "type": "boolean"
                        }
                    },
                    "required": ["name", "compile"]
                }
            },
            "required": ["type", "content", "attributes"]
        }
    },
    "properties": {
        "lanes": {
            "type": "array",
            "items": {
                "anyOf": [
                    {"$ref": "#/$defs/Lane"}
                ]
            }
        },
        "globalMetadata": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "attributes": {
                        "type": "object",
                        "additionalProperties": true
                    }
                },
                "required": ["name", "attributes"]
            }
        },
        "constraints": {
            "type": "object",
            "properties": {
                "words": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "characters": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "images": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "links": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "headings": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "bullet_points": {
                    "type": ["integer", "null"],
                    "minimum": 0
                },
                "tables": {
                    "type": ["integer", "null"],
                    "minimum": 0
                }
            }
        },
        "imageFiles": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "fileBase64": {
                        "type": "string"
                    }
                },
                "required": ["name", "fileBase64"]
            }
        },
        "styles": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "content": {
                    "type": "string"
                }
            },
            "required": ["name", "content"]
        }
    }
}